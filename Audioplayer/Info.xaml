<Window x:Class="AudioPlayer.Info"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioPlayer"
        mc:Ignorable="d"
        Title="Info" Height="360" Width="425" ResizeMode="CanMinimize" Background="#FF323232" Icon="infoIcon.png">
    <Grid>
        <Label Content="Audio Player Info" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" FontSize="24" Foreground="White"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,70,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Foreground="White" FontSize="16" Width="370"><Run Text="This software is free to use. You can translate the code found in the .exe file into human readable forma"/><Run Text="t. You might also freely use, share and enjoy this program, but you"/><Run Text=" might not make changes to it"/><Run Text=" and you cannot monetize it"/><Run Text=", as this program was made for educational and leisure use"/><Run Text=" only"/><Run Text="."/></TextBlock>
        <Button x:Name="CloseButton" Content="Close" HorizontalAlignment="Left" Margin="20,280,0,0" VerticalAlignment="Top" Width="50" Background="#FF646464" Foreground="White" Click="CloseButton_Click"/>
    </Grid>
</Window>
